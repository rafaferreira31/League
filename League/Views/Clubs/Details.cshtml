@model League.Data.Entities.Club

@{
    ViewData["Title"] = "Details";
}

<h1>Club Details</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FoundingDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FoundingDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Stadium)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Stadium)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageId))
            {
                <img src="@Url.Content(Model.ImageId)" alt="Picture" style="width: 300px; height: 450px; max-width: 100%; height: auto ">
            }
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

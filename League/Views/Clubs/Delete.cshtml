@model League.Data.Entities.Club

<div class="custom-header">
    <h1 style="margin-bottom:10px">Delete Club</h1>
    <h3>Are you sure you want to delete this?</h3>
</div>

<div>
    <hr />
    <br />


    <div class="row">
        <div class="col-md-8">
            <dl class="row" style="font-size: 1.5rem">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FoundingDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FoundingDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Stadium)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Stadium)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
                <img src="@Url.Content(Model.ImageFullPath)" alt="Picture" style="width: 300px; height: 450px; max-width: 100%; height: auto ">
        </div>
    </div>





    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="button-24" /> |
        <a asp-action="Index" class="button-Back">Back</a>
    </form>
</div>

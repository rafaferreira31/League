@model League.Data.Entities.Game

@{
    ViewData["Title"] = "Create";
}

<h1>Add New Game</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameDate" class="control-label"></label>
                <input asp-for="GameDate" class="form-control" />
                <span asp-validation-for="GameDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitedClub" class="control-label"></label>
                <input asp-for="VisitedClub" class="form-control" />
                <span asp-validation-for="VisitedClub" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitorClub" class="control-label"></label>
                <input asp-for="VisitorClub" class="form-control" />
                <span asp-validation-for="VisitorClub" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitedGoals" class="control-label"></label>
                <input asp-for="VisitedGoals" class="form-control" />
                <span asp-validation-for="VisitedGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitorGoals" class="control-label"></label>
                <input asp-for="VisitorGoals" class="form-control" />
                <span asp-validation-for="VisitorGoals" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

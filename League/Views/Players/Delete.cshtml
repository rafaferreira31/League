@model League.Data.Entities.Player

<div class="custom-header">
    <h1 style="margin-bottom:10px">Delete Player</h1>
    <h3>Are you sure you want to delete this?</h3>
</div>

<div>
    <hr />
    <br />
    <div class="row">
        <div class="col-md-8">
            <dl class="row" style="font-size: 1.5rem">
                <dt class="col-sm-3" style="margin-bottom:15px">
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Position)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Position)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            <img src="@Url.Content(Model.ImageFullPath)" alt="Picture" class="cruds-images-DD">
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="button-24" /> |
        @if (User.IsInRole("ClubRepresentant"))
        {
            <a asp-action="Manage" class="button-Back">Back to List</a>
        }
        else
        {
            <a asp-action="Index" class="button-Back">Back to List</a>
        }
    </form>
</div>

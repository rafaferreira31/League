@model League.Models.PlayerViewModel

<div class="custom-header-crud">
    <h1>Edit Player</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />

            <div class="form-group-profile text-login">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group-profile text-login">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group-profile text-login">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group-profile text-login">
                <label asp-for="Position" class="control-label">Position</label>
                <select asp-for="Position" class="form-control" asp-items="ViewBag.Positions">
                    <option value="">Select a Position....</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group-profile text-login">
                <label asp-for="ClubId" class="control-label">Club</label>
                <select asp-for="ClubId" class="form-control" asp-items="ViewBag.Clubs">
                    <option value="">Select Club....</option>
                </select>
                <span asp-validation-for="ClubId" class="text-danger"></span>
            </div>
            <div class="form-group-profile text-login">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="button-Edit" /> | 
                @if (User.IsInRole("ClubRepresentant"))
                {
                    <a asp-action="Manage" class="button-Back">Back to List</a>
                }
                else
                {
                    <a asp-action="Index" class="button-Back">Back to List</a>
                }
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="@Url.Content(Model.ImageFullPath)" alt="Image" class="cruds-images">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

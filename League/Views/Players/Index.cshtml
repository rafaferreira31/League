@model IEnumerable<League.Data.Entities.Player>

<div class="custom-header-crud">
    <h1>Players</h1>
</div>
<br />
<hr />
@if (User.IsInRole("ClubRepresentant"))
{
    <p>
        <a asp-action="Create" class="button-Back"><i class="fas fa-plus"> NEW </i></a>
    </p>
}
<br />

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                @if (User.IsInRole("ClubRepresentant"))
                {
                    <a asp-action="DetailsManage" asp-route-id="@item.Id" style="text-decoration: none; color: inherit;">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(item.ImageFullPath))
                            {
                                <div style="width: 100%; height: 300px; overflow: hidden;">
                                    <img src="@Url.Content(item.ImageFullPath)" alt="Player Image" style="width: 100%; height: 100%; object-fit: cover;">
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@item.FirstName @item.LastName</h5>
                                <p class="card-text">
                                    <strong>Birth Date:</strong> @item.BirthDate.ToString("dd/MM/yyyy")<br />
                                    <strong>Position:</strong> @item.Position
                                </p>
                            </div>
                        </div>
                    </a>
                }
                else
                {
                    <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none; color: inherit;">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(item.ImageFullPath))
                            {
                                <div style="width: 100%; height: 300px; overflow: hidden;">
                                    <img src="@Url.Content(item.ImageFullPath)" alt="Player Image" style="width: 100%; height: 100%; object-fit: cover;">
                                </div>
                            }
                            <div class="card-body">
                                <h5 class="card-title">@item.FirstName @item.LastName</h5>
                                <p class="card-text">
                                    <strong>Birth Date:</strong> @item.BirthDate.ToString("dd/MM/yyyy")<br />
                                    <strong>Position:</strong> @item.Position
                                </p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        }
    </div>
</div>
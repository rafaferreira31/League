@model League.Models.StaffViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageId" />

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FunctionPerformed" class="control-label">Function</label>
                <select asp-for="FunctionPerformed" class="form-control" asp-items="ViewBag.Functions">
                    <option value="">Select a Function....</option>
                </select>
                <span asp-validation-for="FunctionPerformed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubId" class="control-label">Club</label>
                <select asp-for="ClubId" class="form-control" asp-items="ViewBag.Clubs">
                    <option value="">Select Club....</option>
                </select>
                <span asp-validation-for="ClubId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="@Url.Content(Model.ImageFullPath)" alt="Image" style="width: 50px; height: 75px; max-width: 100%; height: auto ">
    </div>
</div>


<div>
    @if (User.IsInRole("ClubRepresentant"))
    {
        <a asp-action="Manage" class="button-Back">Back to List</a>
    }
    else
    {
        <a asp-action="Index" class="button-Back">Back to List</a>
    }
</div>


@model League.Models.StaffViewModel

<div class="custom-header-crud">
    <h1>New Staff</h1>
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <partial name="_StaffsCE" />

            <hr />
            <div class="form-group">
                <button type="submit" value="Create" class="button-Edit"> Insert</button> | 
                @if (User.IsInRole("ClubRepresentant"))
                {
                    <a asp-action="Manage" class="button-Back">Back</a>
                }
                else
                {
                    <a asp-action="Index" class="button-Back">Back</a>
                }
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

